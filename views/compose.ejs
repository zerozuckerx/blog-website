<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="post">
	<div class="form-group">
		<label for="title">Title</label>
		<input id="title" type="text" class="form-control" name="postTitle">
	</div>

	<div class="form-group">
		<label for="post">Post</label>
		<textarea id="post" type="text" class="form-control" name="postBody" rows="5" cols="30"></textarea>
	</div>

	<button class="btn btn-primary btn-sm" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") %>
